<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/parent"
    tools:context=".MainActivity">

    <!--Added features to poke through-->
    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello from Mark!"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/button"
        android:layout_centerHorizontal="true"
        android:background="#BCCFD9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_alignParentBottom="true"
        android:text="Click to change text color"
        android:textColor="@color/black"
        android:padding="10dp"
        android:textSize="30sp"
         />

    <TextView
        android:id="@+id/changeBackgroundButton"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="106dp"
        android:background="#BCCFD9"
        android:padding="10dp"
        android:text="Click to change background color"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/changeText"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="181dp"
        android:background="#BCCFD9"
        android:padding="10dp"
        android:text="Click to change text"
        android:textColor="@color/black"
        android:textSize="30sp" />

</RelativeLayout>